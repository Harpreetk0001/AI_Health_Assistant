from kivy.app import App
from kivy.uix.screenmanager import ScreenManager, Screen
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.label import Label
from kivy.uix.button import Button

class DashboardScreen(Screen):
    def __init__(self, **kwargs):
        super().__init__(**kwargs)
        layout = BoxLayout(orientation='vertical')
        layout.add_widget(Label(text="Welcome to MedBuddy Dashboard"))
        layout.add_widget(Button(text="Go to Health Stats", on_press=lambda x: self.manager.current = 'health'))
        self.add_widget(layout)

class HealthStatsScreen(Screen):
    def __init__(self, **kwargs):
        super().__init__(**kwargs)
        layout = BoxLayout(orientation='vertical')
        layout.add_widget(Label(text="Heart Rate: 72 bpm"))
        layout.add_widget(Label(text="Hydration: Normal"))
        layout.add_widget(Button(text="Go to Profile", on_press=lambda x: self.manager.current = 'profile'))
        self.add_widget(layout)

class ProfileScreen(Screen):
    def __init__(self, **kwargs):
        super().__init__(**kwargs)
        layout = BoxLayout(orientation='vertical')
        layout.add_widget(Label(text="User: John Smith"))
        layout.add_widget(Label(text="Age: 72"))
        layout.add_widget(Button(text="Back to Dashboard", on_press=lambda x: self.manager.current = 'dashboard'))
        self.add_widget(layout)

class MedBuddyApp(App):
    def build(self):
        sm = ScreenManager()
        sm.add_widget(DashboardScreen(name='dashboard'))
        sm.add_widget(HealthStatsScreen(name='health'))
        sm.add_widget(ProfileScreen(name='profile'))
        return sm

if __name__ == '__main__':
    MedBuddyApp().run()
